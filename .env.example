# Copy to `.env` and fill in values. Never commit `.env`.

# Required
OPENAI_API_KEY=sk-REPLACE_ME

# Telegram (optional)
TELEGRAM_BOT_TOKEN=123456:ABCDEF_REPLACE_ME
TELEGRAM_ALLOWED_USER_IDS=12345678
TELEGRAM_DEFAULT_CHAT_ID=12345678

# Google Calendar (optional; one-way sync to primary)
# Path to OAuth client secrets JSON from Google Cloud Console
GOOGLE_CALENDAR_CLIENT_SECRETS=/mnt/c/Users/you/Downloads/credentials.json
# Optional token cache location (default: data/google_calendar_token.json)
# GOOGLE_CALENDAR_TOKEN_PATH=/mnt/c/Users/you/AppData/Local/ass/google_calendar_token.json
# Optional: auto-sync every create_reminder to Google Calendar (primary)
# GOOGLE_CALENDAR_AUTO_SYNC=true

